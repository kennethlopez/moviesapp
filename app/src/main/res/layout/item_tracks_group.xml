<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_tracks_group_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/genre_text"
        android:layout_marginStart="@dimen/big_space" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_tracks_group_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/item_tracks_group_header"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/big_space"
        android:paddingStart="@dimen/small_space"
        android:paddingEnd="@dimen/small_space"
        android:clipToPadding="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>